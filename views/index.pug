extends layout

block content
  .box-container(style="background-color: black; color: white;")
    .left-container 
      .like-wrap
        div(style="color:white;") Like
      .site Site
    .right-container
      .title-wrap 
        text.title(style="color: white;") Title
        span.comment
      .author atuhor / date
  -for(var i = 0; i < data.length; i++)
    -var siteColor = (data[i].site === '오유' ? 'ou' : siteColor)
    -var siteColor = (data[i].site === '펨코' ? 'fm' : siteColor)
    -var siteColor = (data[i].site === '웃대' ? 'humoruniv' : siteColor)
    a.box-container(href=`${data[i].url}`)
      .left-container
        .like-wrap
          .like-emoji 👍
          span.like
            div #{data[i].like}
        .site(class=siteColor) #{data[i].site}
      .right-container
        .title-wrap
          text.title #{data[i].subject} 
          span.comment #{data[i].comment}
        .author #{data[i].author} / #{data[i].date}
